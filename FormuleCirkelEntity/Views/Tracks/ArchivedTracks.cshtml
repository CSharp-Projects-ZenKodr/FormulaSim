@model IEnumerable<FormuleCirkelEntity.Models.Track>

@{
    ViewData["Title"] = "ArchivedTracks";
}

<h1>Archived Tracks</h1>

<table class="table fullborder">
    <thead class="fullborder">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <i class="fas fa-edit fa-2x"></i>
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <i class="fas fa-trash-alt fa-2x"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
