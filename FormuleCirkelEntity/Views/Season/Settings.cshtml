@model SeasonSettingsViewModel
@{ViewData["Title"] = "Seizoen";}

<section>
    <header>
        <h1 class="row">Seizoensinstellingen</h1>
        <h4 class="row">Seizoen @Model.SeasonId</h4>
    </header>
    <section class="row">
        <form method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <section class="form-group">
                <label asp-for="QualificationRemainingDriversQ2" class="control-label">Coureurs in Q2</label>
                <input asp-for="QualificationRemainingDriversQ2" class="form-control" />
                <span asp-validation-for="QualificationRemainingDriversQ2" class="text-danger"></span>
            </section>
            <section class="form-group">
                <label asp-for="QualificationRemainingDriversQ3" class="control-label">Coureurs in Q3</label>
                <input asp-for="QualificationRemainingDriversQ3" class="form-control" />
                <span asp-validation-for="QualificationRemainingDriversQ3" class="text-danger"></span>
            </section>
            <section class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-dark" />
            </section>
        </form>
    </section>
</section>

<a asp-action="Detail" asp-route-id="@Model.SeasonId">
    <i class="fas fa-arrow-alt-circle-left fa-lg"></i>
</a>