@model FormuleCirkelEntity.Models.SeasonTeam

@{ViewData["Title"] = "Edit team";}

<section>
    <header>
        <h1 class="row">Season: @Model.Season.SeasonId</h1>
        <h4 class='row badge' style='background-color:@(Model.Team.Colour);color:@(Model.Team.Accent);font-size:1.5rem;'>@Model.Team.Name</h4>
    </header>
    <section class="row">
        <form method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Principal" class="control-label">Team principal</label>
                <input asp-for="Principal" class="form-control" />
                <span asp-validation-for="Principal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chassis" class="control-label"></label>
                <input asp-for="Chassis" class="form-control" />
                <span asp-validation-for="Chassis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reliability" class="control-label"></label>
                <input asp-for="Reliability" id="relbox" class="form-control" />
                <button type="button" class="btn btn-dark" onclick="reldev()"><i class="fas fa-dice"></i></button>
                <span asp-validation-for="Reliability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineId" value="Motor" class="control-label">Engine</label>
                <select asp-for="EngineId" class="form-control" asp-items="@ViewBag.engines"></select>
            </div>
            <div class="form-group">
                <label asp-for="Topspeed" class="control-label"></label>
                <input asp-for="Topspeed" class="form-control" />
                <span asp-validation-for="Topspeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acceleration" class="control-label"></label>
                <input asp-for="Acceleration" class="form-control" />
                <span asp-validation-for="Acceleration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stability" class="control-label"></label>
                <input asp-for="Stability" class="form-control" />
                <span asp-validation-for="Stability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Handling" class="control-label"></label>
                <input asp-for="Handling" class="form-control" />
                <span asp-validation-for="Handling" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </form>
    </section>
    <a class="row" asp-action="Detail" asp-route-id="@ViewBag.seasonId">
        <i class="fas fa-arrow-alt-circle-left fa-2x"></i>
    </a>
</section>

<script>
    function reldev() {
        var newdev = Math.floor((Math.random() * 4) + 21);
        $('#relbox').val(newdev);
    }
</script>