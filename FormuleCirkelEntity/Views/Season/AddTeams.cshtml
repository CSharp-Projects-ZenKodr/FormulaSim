@model IEnumerable<FormuleCirkelEntity.Models.Team>
@{ViewData["Title"] = "Teams toevoegen";}

<div class="d-inline-block w-50">
    <h3>Season @ViewBag.seasonId - Add teams</h3>

    <table class="ctable fullborder fullwidth">
        <thead class="fullborder">
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Abbreviation)</td>
                    <td><a asp-action="AddTeam" asp-route-id="@ViewBag.seasonId" asp-route-globalTeamId="@item.Id" class="btn btn-outline-primary btn-sm">Add</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="float-left" asp-action="Detail" asp-route-id="@ViewBag.seasonId">
        <i class="fas fa-arrow-alt-circle-left fa-2x"></i>
    </a>
</div>
