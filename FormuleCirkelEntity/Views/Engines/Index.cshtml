@model IEnumerable<FormuleCirkelEntity.Models.Engine>

@{
    ViewData["Title"] = "Engines";
    var pageCount = (int)ViewBag.pageCount;
}

<section>
    <h1>Engines</h1>
    <section>
        <div>
            <a asp-action="Create">
                <i class="fas fa-plus-square fa-2x"></i>
            </a>
            <a class="btn btn-dark float-right" asp-action="ArchivedEngines">Archive</a>
        </div>
    </section>
    <section>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Power</th>
                    <th>Available</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Power</td>
                        <td>@item.Available</td>
                        <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit fa-2x"></i></a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt fa-2x"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</section>

<nav>
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous"><span>&laquo;</span></a>
        </li>
        @for (int i = 1; i <= pageCount; i++)
        {
            <li class="page-item"><a class="page-link" href="#">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next"><span>&raquo;</span></a>
        </li>
    </ul>
</nav>