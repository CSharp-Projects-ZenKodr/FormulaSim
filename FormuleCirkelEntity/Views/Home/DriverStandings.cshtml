@model IEnumerable<FormuleCirkelEntity.Models.SeasonDriver>

@{
    ViewData["Title"] = "Stand";
    var rounds = ViewBag.rounds;
    int position = 1;
    var track = "";
}

<h1>Kampioenschap coureurs</h1>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Pos.
            </th>
            <th>
                Coureur
            </th>
            <th>
                Nummer
            </th>
            <th>
                Team
            </th>
            @foreach (var round in rounds)
            {
                <th>@(track = round.Track.Location.Substring(0, 3).ToUpper())</th>
            }
            <th>
                Punten
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @position
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Driver.DriverNumber)
                </td>
                <td class="badge" style="background-color:@(item.SeasonTeam.Team.Colour);color:@(item.SeasonTeam.Team.Accent);font-size:1rem;display:block;">
                    @Html.DisplayFor(modelItem => item.SeasonTeam.Team.Abbreviation)
                </td>
                @foreach (var round in rounds)
                {
                    DriverResult result = item.DriverResults.FirstOrDefault(r => r.Race.Round == round.Round);
                    if (result == null || result.Position == 0)
                    {
                        <td>?</td>
                    }
                    else
                    {
                        if (result.Status == Status.DNF)
                        {
                            <td><p class="bg-danger">DNF</p></td>
                        }
                        else
                        {
                            <td>@result.Position</td>
                        }
                    }
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
            </tr>
            position++;
        }
    </tbody>
</table>