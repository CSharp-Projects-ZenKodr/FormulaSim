@model TraitsIndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-inline-block w-60">
    <h1>Traits</h1>
    <div class="flex-row mb-1">
        <a asp-action="Create" class="btn mr-auto"><i class="fas fa-plus"></i><span class="ml-1">New</span></a>
    </div>

    <div class="col">
        <h3 class="float-left">Driver</h3>
        <table class="ctable fullborder fullwidth">
            <thead class="fullborder">
                <tr>
                    <th class="w-20">
                        Trait
                    </th>
                    <th class="w-60">
                        Description
                    </th>
                    <th class="w-10">Info</th>
                    <th class="w-10">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DriverTraits)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-left">
                            <span class="ml-cel">@Html.DisplayFor(modelItem => item.TraitDescription)</span>
                        </td>
                        <td>
                            <a asp-action="Info" asp-route-id="@item.TraitId"><i class="fas fa-info-circle fa-2x"></i></a>
                        </td>
                        <td>
                            <a asp-action="Modify" asp-route-id="@item.TraitId"><i class="fas fa-wrench fa-2x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h3 class="float-left">Team</h3>
        <table class="ctable fullborder fullwidth">
            <thead class="fullborder">
                <tr>
                    <th class="w-20">
                        Trait
                    </th>
                    <th class="w-60">
                        Description
                    </th>
                    <th class="w-10">Info</th>
                    <th class="w-10">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TeamTraits)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-left">
                            <span class="ml-cel">@Html.DisplayFor(modelItem => item.TraitDescription)</span>
                        </td>
                        <td>
                            <a asp-action="Info" asp-route-id="@item.TraitId"><i class="fas fa-info-circle fa-2x"></i></a>
                        </td>
                        <td>
                            <a asp-action="Modify" asp-route-id="@item.TraitId"><i class="fas fa-wrench fa-2x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h3 class="float-left">Track</h3>
        <table class="ctable fullborder fullwidth">
            <thead class="fullborder">
                <tr>
                    <th class="w-20">
                        Trait
                    </th>
                    <th class="w-60">
                        Description
                    </th>
                    <th class="w-10">Info</th>
                    <th class="w-10">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TrackTraits)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-left">
                            <span class="ml-cel">@Html.DisplayFor(modelItem => item.TraitDescription)</span>
                        </td>
                        <td>
                            <a asp-action="Info" asp-route-id="@item.TraitId"><i class="fas fa-info-circle fa-2x"></i></a>
                        </td>
                        <td>
                            <a asp-action="Modify" asp-route-id="@item.TraitId"><i class="fas fa-wrench fa-2x"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
