@model IEnumerable<FormuleCirkelEntity.Models.SeasonDriver>

@{
    ViewData["Title"] = "Qualification";
    int position = 1;
}

<h1>Q1 in </h1>

<hr />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Pos.
            </th>
            <th>
                Team
            </th>
            <th>
                Coureur
            </th>
            <th>
                Q1
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(position++)</td>
                <td>@Html.DisplayFor(modelItem => item.SeasonTeam.Team.Abbreviation)</td>
                <td>@Html.DisplayFor(modelItem => item.Drivers.Name)</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Q2" class="btn btn-secondary">Q2</a>