@model IEnumerable<FormuleCirkelEntity.Models.Track>

@{
    ViewData["Title"] = "Races toevoegen";
}
<section>
    <header>
        <h3>Seizoen @ViewBag.seasonId - Races toevoegen</h3>
    </header>
    <table class="table">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Locatie</th>
                <th>DNF</th>
                <th>RNG</th>
                <th>Specificatie</th>
                <th>Aanpassen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@Html.DisplayFor(modelItem => item.DNFodds)</td>
                    <td>@Html.DisplayFor(modelItem => item.RNGodds)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specification)</td>
                    <td>
                        <form method="POST">
                            <input type="hidden" name="trackId" value="@item.TrackId" />
                            <input type="submit" class="btn btn-outline-primary btn-sm" value="Toevoegen" />
                        </form>
                    </td>
                    <td>
                        <a asp-controller="Races" asp-action="ModifyRace" asp-route-id="@ViewBag.seasonId" asp-route-trackId="@item.TrackId">
                            <i class="fas fa-cog"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Season" asp-action="Detail" asp-route-id="@ViewBag.seasonId">
        <i class="fas fa-arrow-alt-circle-left"></i>
    </a>
</section>
