@model IEnumerable<FormuleCirkelEntity.Models.Track>

@{
    ViewData["Title"] = "Add races";
}
<section>
    <header>
        <h3>Season @ViewBag.seasonId - Add races</h3>
    </header>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Specification</th>
                <th></th>
                <th data-toggle="tooltip" data-placement="right" title="Press the cog wheel to modify the stints and what happens each stint.">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specification)</td>
                    <td>
                        <form method="POST">
                            <input type="hidden" name="trackId" value="@item.Id" />
                            <input type="submit" class="btn btn-outline-primary btn-sm" style="width:69px;" value="Add" />
                        </form>
                    </td>
                    <td>
                        <a asp-action="ModifyRace" asp-route-id="@ViewBag.seasonId" asp-route-trackId="@item.Id">
                            <i class="fas fa-cog fa-2x"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Season" asp-action="Detail" asp-route-id="@ViewBag.seasonId">
        <i class="fas fa-arrow-alt-circle-left fa-2x"></i>
    </a>
</section>
