@model FormuleCirkelEntity.Models.Team

@{
    ViewData["Title"] = "Archive";
    string archive = "archive";
    if (Model.Archived) { archive = "unarchive"; }
}

<h1>Archive</h1>

<h3>Are you sure you want to @archive @Model.Name?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Abbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Abbreviation)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamId" />
        <input type="submit" value="@archive" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<div>
    <a asp-action="Index">
        <i class="fas fa-arrow-alt-circle-left fa-2x"></i>
    </a>
</div>
