@model FormuleCirkelEntity.Models.Team

@{
    ViewData["Title"] = "Edit";
}

<h1>Aanpassen</h1>

<h4 class="badge" style="background-color:@(Model.Colour);color:@(Model.Accent);font-size:1.5rem;">@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeamId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abbreviation" class="control-label">Afkorting</label>
                <input asp-for="Abbreviation" class="form-control" />
                <span asp-validation-for="Abbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colour" class="control-label">Kleur</label>
                <input asp-for="Colour" type="color" value="@(Model.Colour)" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Accent" class="control-label">Accent</label>
                <input asp-for="Accent" type="color" value="@(Model.Accent)" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <i class="fas fa-arrow-alt-circle-left"></i>
    </a>
</div>
