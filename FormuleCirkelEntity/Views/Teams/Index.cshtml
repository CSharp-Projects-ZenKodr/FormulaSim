@model IEnumerable<FormuleCirkelEntity.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h1>Teams</h1>

<p>
    <a asp-action="Create">
        <img src="~/images/icon-add.png" width="30" height="30" title="Add" />
    </a>
</p>
<table class="table table-striped  ">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Afkorting
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="badge" style="background-color:@(item.Colour);color:@(item.Accent);font-size:1rem;display:block;">
                    @Html.DisplayFor(modelItem => item.Abbreviation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamId">
                        <img src="~/images/icon-edit.png" width="30" height="30" title="Edit" />
                    </a>
                </td>
                <td>
                    <a asp-action="Stats" asp-route-id="@item.TeamId">
                        <img src="~/images/icon-stats.png" width="30" height="30" title="Stats" />
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.TeamId">
                        <img src="~/images/icon-trash.png" width="30" height="30" title="Delete" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
