@model FormuleCirkelEntity.Models.Driver

@{
    ViewData["Title"] = "Archive";
    string archive = "Archive";
    if (Model.Archived) { archive = "Unarchive"; }
}

<h1>@archive</h1>

<div>
    <h4>Are you sure you want to move @Model.Name?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverNumber)
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DriverId" />
        <input type="submit" value="@archive" class="btn btn-danger" />
    </form>
</div>

<br />
<a asp-action="Index">
    <i class="fas fa-arrow-alt-circle-left fa-2x"></i>
</a>
