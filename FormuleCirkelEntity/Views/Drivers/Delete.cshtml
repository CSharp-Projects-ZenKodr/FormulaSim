@model FormuleCirkelEntity.Models.Driver

@{
    ViewData["Title"] = "Archive";
}

<h1>Archiveren</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nummer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverNumber)
        </dd>
        <dt class = "col-sm-2">
            Naam
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DriverId" />
        <input type="submit" value="Archive" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<a asp-action="Index">
    <i class="fas fa-arrow-alt-circle-left fa-lg"></i>
</a>
