@model IEnumerable<FormuleCirkelEntity.Models.Driver>

@{
    ViewData["Title"] = "Drivers";
    var pageCount = (int)ViewData["pageCount"];
    var pageSize = (int)ViewData["pageSize"];
    var pageNumber = (int)ViewData["pageNumber"];
    var backPage = pageNumber >= 1 ? pageNumber - 1 : 1;
    var nextPage = pageNumber <= pageCount ? pageNumber + 1 : pageCount;
}

<div class="d-inline-block w-60">
    <h1>Drivers</h1>

    <div class="flex-row justify-content-between index-btns">
        <a asp-action="Create" class="btn mr-auto"><i class="fas fa-plus"></i><span class="ml-1">New</span></a>
        <a asp-action="ArchivedDrivers" class="btn"><i class="fas fa-archive"></i><span class="ml-1">Archive</span></a>
        <a asp-action="Leaderlists" class="btn"><i class="fas fa-signal"></i><span class="ml-1">Leaderlist</span></a>
    </div>

    <table class="ctable fullborder fullwidth">
        <thead class="fullborder">
            <tr>
                <th>
                    Number
                </th>
                <th>
                    Name
                </th>
                <th>
                    Abbreviation
                </th>
                <th class="w-10">Edit</th>
                <th class="w-10">Stats</th>
                <th class="w-10">Archive</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.DriverNumber
                    </td>
                    <td class="text-left">
                        <span class="ml-cel">@item.Name</span>
                    </td>
                    <td>
                        @item.Abbreviation
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-wrench fa-2x"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Stats" asp-route-id="@item.Id">
                            <i class="fas fa-id-card fa-2x"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt fa-2x"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" asp-route-ps="@pageSize" asp-route-p="@backPage"><span>&laquo;</span></a>
            </li>
            @for (int i = 1; i <= pageCount; i++)
            {
                <li class="page-item"><a class="page-link" asp-route-ps="@pageSize" asp-route-p="@i">@i</a></li>
            }
            <li class="page-item">
                <a class="page-link" asp-route-ps="@pageSize" asp-route-p="@nextPage"><span>&raquo;</span></a>
            </li>
        </ul>
    </nav>
</div>